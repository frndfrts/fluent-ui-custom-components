{
  "name": "@frndfrts/fluent-ui-custom-components",
  "version": "1.1.1",
  "description": "Custom Fluent UI component library with 5-level architecture",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^3.6.1",
    "@fluentui/react-button": "^9.6.5",
    "@fluentui/react-color-picker": "^9.2.4",
    "@fluentui/react-components": "^9.0.0",
    "@fluentui/react-icons": "^2.0.0",
    "@fluentui/react-input": "^9.7.4",
    "@fluentui/react-select": "^9.4.4",
    "@fluentui/react-swatch-picker": "^9.4.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:all": "npm run build:types && npm run build",
    "build:ci": "rollup -c rollup.config.ci.js",
    "test": "jest",
    "test:coverage": "jest --coverage --watchAll=false",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build:types && npm run build:ci",
    "test:publish": "node scripts/test-publish.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/builder-webpack5": "^9.1.3",
    "@storybook/react-webpack5": "^9.1.3",
    "@storybook/testing-library": "^0.2.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "storybook": "^9.1.3",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.0"
  },
  "sideEffects": false,
  "keywords": [
    "react",
    "fluent-ui",
    "components",
    "typescript",
    "ui-library"
  ],
  "author": "Fluent UI Custom Components Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "github:frndfrts/fluent-ui-custom-components"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
